# SubtitleGenius 配置示例

# OpenAI配置
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic配置
ANTHROPIC_API_KEY=your_anthropic_api_key
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# AWS配置
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# 音频处理配置
AUDIO_SAMPLE_RATE=16000
AUDIO_CHUNK_SIZE=1024
AUDIO_FORMAT=wav

# 字幕配置
SUBTITLE_LANGUAGE=ar
SUBTITLE_FORMAT=srt
MAX_SUBTITLE_LENGTH=80

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/subtitle_genius.log

# 实时处理配置
REAL_TIME_BUFFER_SIZE=5
PROCESSING_INTERVAL=1.0

# 音频段处理器配置
# 转录配置
TRANSCRIBE_MODEL=openai-whisper
SOURCE_LANGUAGE=ar

# 校正配置
CORRECTION_ENABLED=true
CORRECTION_SERVICE=bedrock
CORRECTION_MODEL_ID=us.anthropic.claude-3-haiku-20240307-v1:0
SCENE_DESCRIPTION=足球比赛

# 翻译配置
TRANSLATION_ENABLED=true
TRANSLATION_SERVICE=bedrock
TARGET_LANGUAGE=zh
TRANSLATION_MODEL_ID=us.anthropic.claude-3-haiku-20240307-v1:0

# 输出配置
OUTPUT_FORMAT=srt
INCLUDE_ORIGINAL=true
INCLUDE_TRANSLATION=true

# 音频段配置
SEGMENT_DURATION_MS=1000
SEGMENT_OVERLAP_MS=200
MIN_SEGMENT_DURATION_MS=500
