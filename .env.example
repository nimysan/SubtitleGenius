# OpenAI API配置
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic Claude API配置
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# AWS配置 (如果使用AWS服务)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=subtitle-genius-temp

# Amazon Bedrock配置
BEDROCK_MODEL_ID=anthropic.claude-3-haiku-20240307

# SageMaker Whisper配置
SAGEMAKER_ENDPOINT=your_sagemaker_endpoint_name
SAGEMAKER_CHUNK_DURATION=30

# 音频处理配置
AUDIO_SAMPLE_RATE=16000
AUDIO_CHUNK_SIZE=1024
AUDIO_FORMAT=wav

# 字幕配置
SUBTITLE_LANGUAGE=zh-CN
SUBTITLE_FORMAT=srt
MAX_SUBTITLE_LENGTH=80

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/subtitle_genius.log

# 实时处理配置
REAL_TIME_BUFFER_SIZE=5
PROCESSING_INTERVAL=1.0
